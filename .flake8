[flake8]
max-line-length = 88
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    env,
    .venv,
    migrations/,
    build/,
    dist/
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501   # line too long (handled by black)
per-file-ignores =
    __init__.py:F401,  # imported but unused
    tests/*:S101       # use of assert detected (pytest uses asserts)
select = E,W,F,C
statistics = True
count = True